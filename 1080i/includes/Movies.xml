                                <info>ListItem.Label</info>
                            </control>
                        </focusedlayout>
                        <content target="video">$INFO[Container(501).Listitem.DBID,videodb://movies/genres/]</content>
                    </control>
                    <control type="image">
                        <visible>Container(502).HasNext</visible>
                        <include>visiblefade</include>
                        <left>450</left>
                        <top>1000</top>
                        <height>40</height>
                        <width>40</width>
                        <texture>arrow.png</texture>
                    </control>
