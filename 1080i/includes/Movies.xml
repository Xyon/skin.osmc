                        <left>400</left>
                        <onup>noop</onup>
                        <onleft>501</onleft>
                        <top>140</top>
                        <width>400</width>
                        <height>800</height>
                        <scrolltime tween="sine" easing="out">200</scrolltime>
                        <itemlayout height="70" width="400">
                            <control type="textbox">
                                <width>300</width>
                                <height>120</height>
                                <textcolor>black</textcolor>
                                <font>font30</font>
