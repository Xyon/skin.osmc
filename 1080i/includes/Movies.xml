                        <top>220</top>
                        <height>610</height>
                        <width>400</width>
                        <aspectratio align="top">keep</aspectratio>
                        <texture>$INFO[Container(502).ListItem.Art(poster)]</texture>
                    </control>
                    <control type="grouplist">
                        <visible>StringCompare(Skin.String(movieshome),videodb://movies/genres/)</visible>
                        <left>720</left>
                        <top>820</top>
                        <width>400</width>
                        <itemgap>25</itemgap>
                        <orientation>horizontal</orientation>
                        <control type="label">
                            <width>auto</width>
                            <label>$INFO[Container(502).ListItem.VideoResolution]</label>
                        </control>
                        <control type="label">
                            <width>auto</width>
                            <label>$INFO[Container(502).ListItem.VideoAspect]</label>
                        </control>
                        <control type="label">
                            <width>auto</width>
                            <label>$INFO[Container(502).ListItem.AudioCodec]</label>
                        </control>
                        <control type="label">
                            <width>auto</width>
                            <label>$INFO[Container(502).ListItem.AudioChannels]</label>
                        </control>
                        <control type="label">
                            <width>auto</width>
                            <label>$INFO[Container(502).ListItem.AudioLanguage]</label>
                        </control>
                    </control>
                    <control type="group">
                        <visible>Control.HasFocus(502)</visible>
                        <include>visiblefade</include>
                        <left>720</left>
                        <control type="textbox">
                            <left>440</left>
                            <top>220</top>
                            <height>90</height>
                            <width>350</width>
                            <textcolor>main</textcolor>
                            <label>[B]$INFO[Container(502).ListItem.Title][/B] $INFO[Container(502).ListItem.Year,(,)]</label>
                        </control>
                        <control type="image">
                            <left>440</left>
                            <top>296</top>
                            <height>24</height>
                        <width>300</width>
                        <aspectratio align="left">keep</aspectratio>
                        <texture>$INFO[Container(502).ListItem.Rating,stars/,.png]</texture>
                        </control>
                        <control type="textbox">
                            <left>440</left>
                            <top>320</top>
                            <height>580</height>
                            <width>350</width>
                            <textcolor>black</textcolor>
                            <align>justify</align>
                            <label>$INFO[Container(502).ListItem.Plot]</label>
                        </control>
                    </control>
                </control>
            </control>
        </control>
    </include>
