<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="moviehome">
        <control type="group">
            <visible>Control.HasFocus(9001) | Control.HasFocus(50)</visible>
            <animation condition="Control.HasFocus(50)" effect="slide" time="200" end="-100,0">Conditional</animation>
            <animation effect="slide" time="600" delay="600" start="1520,0" end="0,0">Visible</animation>
            <control type="image">
                <visible>!ControlGroup(9000).HasFocus</visible>
                <animation effect="fade" start="100" end="0" time="200" delay="300">Hidden</animation>
                <width>1600</width>
                <aspectratio align="right">scale</aspectratio>
                <texture>mainbackground.png</texture>
            </control>
            <control type="panel" id="50">
                <top>140</top>
                <left>50</left>
                <width>600</width>
                <height>800</height>
                <onleft>9000</onleft>
                <onright>-</onright>
                <onup>noop</onup>
                <ondown>noop</ondown>
                <scrolltime tween="sine" easing="out">200</scrolltime>
                <itemlayout height="100" width="400">
                    <control type="textbox">
                        <width>550</width>
                        <height>120</height>
                        <textcolor>black</textcolor>
                        <font>font45</font>
                        <align>left</align>
                        <aligny>center</aligny>
                        <info>ListItem.Label</info>
                    </control>
                </itemlayout>
                <focusedlayout height="100" width="400">
                    <control type="textbox">
                        <width>550</width>
                        <height>120</height>
                        <font>font45</font>
                        <align>left</align>
                        <aligny>center</aligny>
                        <info>ListItem.Label</info>
                    </control>
                </focusedlayout>
                <content sortby="title" sortorder="ascending">videodb://movies/titles/</content>
            </control>
            <control type="image">
                <visible>Container(50).HasNext</visible>
                <include>visiblefade</include>
                <left>200</left>
                <top>1000</top>
                <height>50</height>
                <width>50</width>
                <texture>arrow.png</texture>
            </control>
            <control type="image">
                <visible>Container(50).HasPrevious</visible>
                <include>visiblefade</include>
                <left>200</left>
                <top>30</top>
                <height>50</height>
                <width>50</width>
                <texture flipy="true">arrow.png</texture>
            </control>
            <control type="group">
                <left>600</left>
                <control type="image">
                    <top>220</top>
                    <height>610</height>
                    <width>400</width>
                    <aspectratio align="top">keep</aspectratio>
                    <texture>$INFO[Container(50).ListItem.Art(poster)]</texture>
                </control>
                <control type="textbox">
                    <left>440</left>
                    <top>220</top>
                    <height>90</height>
                    <width>400</width>
                    <textcolor>main</textcolor>
                    <label>[B]$INFO[Container(50).ListItem.Title][/B] $INFO[Container(50).ListItem.Year,(,)]</label>
                </control>
                <control type="image">
                    <left>440</left>
                    <top>290</top>
                    <height>30</height>
                    <width>120</width>
                    <aspectratio align="left">keep</aspectratio>
                    <texture>$INFO[Container(50).ListItem.StarRating,stars/]</texture>
                </control>
                <control type="textbox">
                    <left>440</left>
                    <top>320</top>
                    <height>580</height>
                    <width>400</width>
                    <textcolor>black</textcolor>
                    <label>$INFO[Container(50).ListItem.Plot]</label>
                </control>
                <control type="grouplist">
                    <top>820</top>
                    <width>400</width>
                    <itemgap>25</itemgap>
                    <orientation>horizontal</orientation>
                    <control type="label">
                        <width>auto</width>
                        <label>$INFO[Container(50).ListItem.VideoResolution]</label>
                    </control>
                    <control type="label">
                        <width>auto</width>
                        <label>$INFO[Container(50).ListItem.VideoAspect]</label>
                    </control>
                    <control type="label">
                        <width>auto</width>
                        <label>$INFO[Container(50).ListItem.AudioCodec]</label>
                    </control>
                    <control type="label">
                        <width>auto</width>
                        <label>$INFO[Container(50).ListItem.AudioChannels]</label>
                    </control>
                    <control type="label">
                        <width>auto</width>
                        <label>$INFO[Container(50).ListItem.AudioLanguage]</label>
                    </control>
                </control>
            </control>
        </control>
    </include>
</includes>