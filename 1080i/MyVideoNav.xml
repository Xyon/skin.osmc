<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">50</defaultcontrol>
    <menucontrol>9000</menucontrol>
    <backgroundcolor>white</backgroundcolor>
    <views>50</views>
    <!--
   50 Icons

   -->
    <include>openclose</include>
    <controls>
        <include>osmc_back</include>
        <control type="group" description="Icons view">
            <visible>Control.IsVisible(50)</visible>
            <control type="list" id="50">
                <left>50</left>
                <centertop>560</centertop>
                <width>500</width>
                <height>800</height>
                <onleft>9000</onleft>
                <onright>60</onright>
                <onup>noop</onup>
                <ondown>noop</ondown>
                <viewtype label="535">list</viewtype>
                <pagecontrol>60</pagecontrol>
                <scrolltime>300</scrolltime>
                <itemlayout height="80" width="500">
                    <control type="label">
                        <left>40</left>
                        <width>450</width>
                        <height>100</height>
                        <textcolor>black</textcolor>
                        <font>font40</font>
                        <align>right</align>
                        <aligny>center</aligny>
                        <info>ListItem.Label</info>
                    </control>
                </itemlayout>
                <focusedlayout height="80" width="500">
                    <control type="label">
                        <left>40</left>
                        <width>450</width>
                        <height>100</height>
                        <font>font40</font>
                        <align>right</align>
                        <aligny>center</aligny>
                        <info>ListItem.Label</info>
                    </control>
                </focusedlayout>
            </control>
            <control type="image">
                <width>1920</width>
                <height>200</height>
                <texture>topfade.png</texture>
            </control>
            <control type="image">
                <visible>Container(50).HasNext</visible>
                <include>visiblefade</include>
                <left>250</left>
                <top>1000</top>
                <height>50</height>
                <width>50</width>
                <texture>arrow.png</texture>
            </control>
            <control type="image">
                <visible>Container(50).HasPrevious</visible>
                <include>visiblefade</include>
                <left>250</left>
                <top>30</top>
                <height>50</height>
                <width>50</width>
                <texture flipy="true">arrow.png</texture>
            </control>
            <control type="image">
                <visible>!ListItem.IsParentFolder</visible>
                <animation effect="slide" start="1420" end="0" time="200">VisibleChange</animation>
                <left>600</left>
                <width>1420</width>
                <height>1080</height>
                <aspectratio align="right">scale</aspectratio>
                <texture flipx="true">mainbackground.png</texture>
            </control>
            <control type="group">
                <visible>!ListItem.IsParentFolder</visible>
                <animation effect="fade" start="0" end="100" time="200" delay="300">VisibleChange</animation>
                <control type="image">
                    <top>180</top>
                    <left>600</left>
                    <width>600</width>
                    <height>600</height>
                    <aspectratio align="center">keep</aspectratio>
                    <texture>$INFO[Listitem.Icon]</texture>
                </control>
                <control type="progress">
                    <centerleft>900</centerleft>
                    <visible>!Integer.IsEqual(ListItem.PercentPlayed,0)</visible>
                    <top>805</top>
                    <width>400</width>
                    <height>10</height>
                    <visible>true</visible>
                    <texturebg>black.png</texturebg>
                    <midtexture border="5">white.png</midtexture>
                    <info>ListItem.PercentPlayed</info>
                </control>
                <control type="grouplist">
                    <top>800</top>
                    <centerleft>900</centerleft>
                    <width>400</width>
                    <itemgap>0</itemgap>
                    <orientation>horizontal</orientation>
                    <control type="label">
                        <width>80</width>
                        <align>center</align>
                        <label>$INFO[ListItem.VideoResolution]</label>
                    </control>
                    <control type="label">
                        <width>80</width>
                        <align>center</align>
                        <label>$INFO[ListItem.VideoAspect]</label>
                    </control>
                    <control type="label">
                        <width>80</width>
                        <align>center</align>
                        <label>$INFO[ListItem.AudioCodec]</label>
                    </control>
                    <control type="label">
                        <width>80</width>
                        <align>center</align>
                        <label>$INFO[ListItem.AudioChannels]</label>
                    </control>
                    <control type="label">
                        <width>80</width>
                        <align>center</align>
                        <label>$INFO[ListItem.AudioLanguage]</label>
                    </control>
                </control>
                <control type="textbox">
                    <top>80</top>
                    <left>1250</left>
                    <height>90</height>
                    <width>450</width>
                    <label>[B]$INFO[ListItem.Title][/B] $INFO[ListItem.Year,(,)]</label>
                </control>
                <control type="image">
                    <left>1250</left>
                    <top>180</top>
                    <height>24</height>
                    <width>300</width>
                    <aspectratio align="left">keep</aspectratio>
                    <texture>$INFO[ListItem.Rating,stars/,.png]</texture>
                </control>
                <control type="textbox">
                    <top>210</top>
                    <left>1250</left>
                    <width>450</width>
                    <height>700</height>
                    <align>justify</align>
                    <info>Listitem.Plot</info>
                </control>
            </control>
        </control>
        <!--VIEWSEND-->
        <control type="image">
            <visible>ControlGroup(9000).HasFocus</visible>
            <width>1920</width>
            <animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
            <texture>darken.png</texture>
        </control>
        <control type="group" description="Side menu 9000 group">
            <visible allowhiddenfocus="true">ControlGroup(9000).HasFocus() + !Window.IsVisible(traktContextMenu.xml)</visible>
            <animation effect="slide" start="-470,0" end="0,0" time="300">VisibleChange</animation>
            <control type="image" description="List back">
                <top>-10</top>
                <left>-80</left>
                <width>580</width>
                <height>1100</height>
                <aspectratio>stretch</aspectratio>
                <texture border="50">mainbackground.png</texture>
            </control>
            <control type="grouplist" id="9000">
                <left>0</left>
                <align>left</align>
                <onright>50</onright>
                <centertop>540</centertop>
                <width>470</width>
                <height>1000</height>
                <itemgap>3</itemgap>
                <control type="button" id="0">
                    <enable>false</enable>
                    <include>DialogButt</include>
                    <label>•• $LOCALIZE[33063] ••</label>
                </control>
                <control type="togglebutton" id="14" description="Toggle Watched">
                    <include>DialogButt</include>
                    <label>$LOCALIZE[535]: $LOCALIZE[16100]</label>
                    <altlabel>$LOCALIZE[535]: $LOCALIZE[16101]</altlabel>
                </control>
                <control type="radiobutton" id="98">
                    <enable>Container.CanFilterAdvanced</enable>
                    <include>DialogButt</include>
                    <label>587</label>
                    <selected>Container.Filtered</selected>
                    <onclick>right</onclick>
                    <onclick>Filter</onclick>
                </control>
                <control type="button" id="3" description="Sort">
                    <include>DialogButt</include>
                </control>
                <control type="togglebutton" id="4" description="SortOrder">
                    <include>DialogButt</include>
                    <label>$INFO[Container.SortOrder]</label>
                    <usealttexture>Container.SortDirection(Ascending)</usealttexture>
                </control>
                <control type="button" id="8" description="search">
                    <visible>!System.HasAddon(script.globalsearch)</visible>
                    <include>DialogButt</include>
                    <label>137</label>
                </control>
                <control type="button" id="90" description="search">
                    <visible>System.HasAddon(script.globalsearch)</visible>
                    <include>DialogButt</include>
                    <onclick>RunAddon(script.globalsearch)</onclick>
                    <label>137</label>
                </control>
                <control type="button" id="699" description="Playing">
                    <enable>Player.HasMedia</enable>
                    <include>DialogButt</include>
                    <label>16003</label>
                    <onclick>fullscreen</onclick>
                </control>
                <control type="togglebutton" id="20">
                    <description>Update library</description>
                    <include>DialogButt</include>
                    <label>653</label>
                    <altlabel>13353</altlabel>
                    <usealttexture>library.isscanningvideo</usealttexture>
                    <onclick>right</onclick>
                </control>
            </control>
        </control>
    </controls>
</window>
