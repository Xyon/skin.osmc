<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include file="Includes_Variables.xml" />
    <include file="Defaults.xml" />
    <include file="includes/Movies.xml" />
    <include file="includes/Tvshows.xml" />
    <include file="includes/Power.xml" />
    <include file="includes/Settingshome.xml" />
    <include file="includes/Musichome.xml" />
    <include file="includes/Addonshome.xml" />

    <include name="visiblefade">
        <animation effect="fade" start="0" end="100" time="200">visiblechange</animation>
    </include>

    <include name="osmc_back">
        <control type="image">
            <width>1920</width>
            <height>1080</height>
            <texture>mainbackground.png</texture>
        </control>
    </include>

    <include name="openclose">
        <animation effect="fade" time="150">WindowOpen</animation>
        <animation effect="fade" time="150">WindowClose</animation>
    </include>

    <include name="contextslide">
        <animation effect="slide" start="720,0" end="0,0" time="300">WindowOpen</animation>
        <animation effect="slide" start="0,0" end="720,0" time="300">Windowclose</animation>
    </include>

    <include name="Fanart_Fade">
        <fadetime>320</fadetime>
        <animation effect="fade" time="320">Visible</animation>
        <animation effect="fade" time="280">Hidden</animation>
    </include>

    <include name="Icon_Fade">
        <fadetime>200</fadetime>
        <animation effect="fade" time="200">Visible</animation>
        <animation effect="fade" time="100">Hidden</animation>
    </include>

    <include name="fscreen">
        <left>0</left>
        <top>0</top>
        <width>1920</width>
        <height>1080</height>
    </include>

    <include name="slidedialog">
        <animation effect="slide" start="1220,0" end="0,0" reversible="true" time="500">WindowOpen</animation>
    </include>

    <include name="DialogButt">
        <width>400</width>
        <font>font30</font>
        <align>right</align>
    </include>
</includes>
