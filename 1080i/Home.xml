<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="false">9000</defaultcontrol>
    <backgroundcolor>background</backgroundcolor>
    <include>OpenClose</include>
    <controls>
        <include>osmc_back</include>
        <control type="grouplist" id="9000">
            <width>400</width>
            <height>1080</height>
            <scrolltime>600</scrolltime>
            <onright>700</onright>
            <usecontrolcoords>true</usecontrolcoords>
            <control type="button" id="9001">
                <top>200</top>
                <height>880</height>
                <width>400</width>
                <font>font_MainMenu</font>
                <aligny>top</aligny>
                <align>right</align>
                <label>Movies</label>
            </control>
            <control type="button" id="9002">
                <top>200</top>
                <height>880</height>
                <width>400</width>
                <font>font_MainMenu</font>
                <aligny>top</aligny>
                <align>right</align>
                <label>TVShows</label>
            </control>
            <control type="button" id="9003">
                <top>200</top>
                <height>880</height>
                <width>400</width>
                <font>font_MainMenu</font>
                <aligny>top</aligny>
                <align>right</align>
                <label>Testing</label>
            </control>
        </control>
        <control type="group" id="700">
            <description>MOVIES</description>
            <visible>Control.HasFocus(9001) | Container.HasFocus(50)</visible>
            <animation effect="slide" time="600" delay="600" start="1920,0" end="420,0">Visible</animation>
            <control type="image">
                <texture>mainbackground.png</texture>
            </control>
        </control>
        <control type="group" id="700">
            <description>TVSHOWS</description>
            <visible>Control.HasFocus(9002) | Control.HasFocus(51) | Control.HasFocus(511)</visible>
            <animation effect="slide" time="600" delay="600" start="1920,0" end="420,0">Visible</animation>
            <animation condition="Control.HasFocus(51) | Control.HasFocus(511)" effect="slide" time="200" delay="60" end="-100,0">Conditional</animation>
            <control type="image">
                <texture>mainbackground.png</texture>
            </control>
            <control type="panel" id="51">
                <top>200</top>
                <left>50</left>
                <width>400</width>
                <height>680</height>
                <onleft>9000</onleft>
                <onright>-</onright>
                <onup>noop</onup>
                <ondown>noop</ondown>
                <onclick>SetFocus(222)</onclick>
                <scrolltime tween="sine" easing="out">200</scrolltime>
                <itemlayout height="85" width="400">
                    <control type="textbox">
                        <width>400</width>
                        <height>110</height>
                        <textcolor>black</textcolor>
                        <font>font30_title</font>
                        <align>left</align>
                        <aligny>center</aligny>
                        <info>ListItem.Label</info>
                    </control>
                </itemlayout>
                <focusedlayout height="85" width="400">
                    <control type="textbox">
                        <width>400</width>
                        <height>110</height>
                        <font>font30_title</font>
                        <align>left</align>
                        <aligny>center</aligny>
                        <info>ListItem.Label</info>
                    </control>
                </focusedlayout>
                <content sortby="title" sortorder="ascending">videodb://tvshows/titles/</content>
            </control>
            <control type="group">
                <control type="image">
                    <left>400</left>
                    <top>220</top>
                    <height>600</height>
                    <width>400</width>
                    <aspectratio align="top">keep</aspectratio>
                    <texture>$INFO[Container(51).ListItem.Art(thumb)]</texture>
                </control>
                <control type="textbox">
                    <left>830</left>
                    <top>220</top>
                    <height>100</height>
                    <width>400</width>
                    <textcolor>main</textcolor>
                    <label>$INFO[Container(51).ListItem.Title][CR]$INFO[Container(51).ListItem.Year,(,)]</label>
                </control>
                <control type="textbox">
                    <left>830</left>
                    <top>310</top>
                    <height>400</height>
                    <width>400</width>
                    <textcolor>black</textcolor>
                    <label>$INFO[Container(51).ListItem.Plot]</label>
                </control>
            </control>
            <control type="group" id="222">
                <description>TVSHOWS</description>
                <visible allowhiddenfocus="true">Control.HasFocus(511) </visible>
                <animation effect="slide" time="600" delay="200" start="1920,0" end="200,0">Visible</animation>
                <control type="image">
                    <texture>mainbackground.png</texture>
                </control>
                <control type="panel" id="511">
                    <top>200</top>
                    <left>50</left>
                    <width>400</width>
                    <height>680</height>
                    <onleft>51</onleft>
                    <onright>-</onright>
                    <onup>noop</onup>
                    <ondown>noop</ondown>
                    <scrolltime tween="sine" easing="out">200</scrolltime>
                    <itemlayout height="110" width="400">
                        <control type="textbox">
                            <width>400</width>
                            <height>110</height>
                            <textcolor>black</textcolor>
                            <font>font30_title</font>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Label</info>
                        </control>
                    </itemlayout>
                    <focusedlayout height="110" width="120">
                        <control type="textbox">
                            <width>400</width>
                            <height>110</height>
                            <font>font30_title</font>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Label</info>
                        </control>
                    </focusedlayout>
                    <content sortby="title" sortorder="ascending">$INFO[Container(51).ListItem.DBID,videodb://tvshows/titles/]</content>
                </control>
            </control>
        </control>
    </controls>
</window>
